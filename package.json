{
  "name": "discover-canada-ar",
  "version": "1.0.0",
  "type": "module",
  "description": "WebAR experience showcasing Canadian icons through collectible AR cards",
  "scripts": {
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "dev:frontend": "vite",
    "dev:backend": "node --watch backend/server.js",
    "build": "vite build",
    "preview": "vite preview",
    "server": "node backend/server.js",
    "start": "node backend/database.js && node backend/server.js",
    "railway:init": "node backend/database.js"
  },
  "dependencies": {
    "aframe": "^1.5.0",
    "ar.js": "github:AR-js-org/AR.js#master",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.22.0",
    "better-sqlite3": "^9.4.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "concurrently": "^8.2.2",
    "vite": "^5.1.4"
  }
}
